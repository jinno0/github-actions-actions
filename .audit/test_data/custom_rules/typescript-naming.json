{
  "language": "TypeScript",
  "rules": [
    {
      "name": "function-naming",
      "description": "関数名はcamelCase",
      "severity": "warning",
      "pattern": "function\\s+[A-Z][a-zA-Z0-9]*",
      "message": "関数名はcamelCaseを使用してください。"
    },
    {
      "name": "constant-naming",
      "description": "定数はUPPER_SNAKE_CASE",
      "severity": "warning",
      "pattern": "const\\s+[a-z][a-zA-Z0-9]*\\s*=",
      "message": "定数名はUPPER_SNAKE_CASEを使用してください。"
    }
  ]
}
