extends: default

rules:
  line-length:
    max: 120
    level: warning

  indentation:
    spaces: 2
    indent-sequences: true

  comments:
    min-spaces-from-content: 1

  comments-indentation: {}

  document-start:
    present: true

  empty-lines:
    max: 2

  trailing-spaces: {}

  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']
